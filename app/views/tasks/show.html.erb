<% content_for :title, "#{@task.title} - #{@project.name}" %>

<div class="max-w-4xl mx-auto px-4 sm:px-0">
  <div class="mb-8">
    <%= link_to @project, class: "text-sm  text-gray-400 hover:text-indigo-500" do %>
      ‚Üê Back to <%= @project.name %>
    <% end %>
  </div>

  <div class="bg-[#252525] rounded-lg shadow ">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex items-start justify-between mb-6">
        <div class="flex-1">
          <div class="flex items-center space-x-3 mb-4">
            <h1 class="text-3xl  text-gray-100"><%= @task.title %></h1>
            <% unless @task.completed? %>
              <%= button_to complete_project_task_path(@project, @task), method: :patch, class: "inline-flex items-center px-3 py-2 border border-green-300 shadow-sm text-sm leading-4   text-green-700 bg-green-900/20 hover:bg-emerald-900/30" do %>
                <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Mark Complete
              <% end %>
            <% else %>
              <%= button_to uncomplete_project_task_path(@project, @task), method: :patch, class: "inline-flex items-center px-3 py-2 border border-gray-700 shadow-sm text-sm leading-4   text-gray-400 bg-[#252525] hover:bg-[#1a1a1a]" do %>
                Reopen Task
              <% end %>
            <% end %>
          </div>

          <div class="flex flex-wrap gap-2 mb-4">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs  <%= @task.status == 'completed' ? 'bg-emerald-900/30 text-green-200' : @task.status == 'in_progress' ? 'bg-blue-100 text-blue-800' : 'bg-[#252525] rounded-lg text-gray-300' %>">
              <%= @task.status.humanize %>
            </span>
            
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs  <%= @task.priority == 'urgent' ? 'bg-rose-900/30 text-red-200' : @task.priority == 'high' ? 'bg-orange-100 text-orange-800' : @task.priority == 'medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-[#252525] rounded-lg text-gray-300' %>">
              <%= @task.priority.humanize %> Priority
            </span>
            
            <% if @task.category %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs " style="background-color: <%= @task.category.color %>20; color: <%= @task.category.color %>;">
                <%= @task.category.name %>
              </span>
            <% end %>
          </div>

          <% if @task.due_date %>
            <div class="flex items-center text-sm <%= @task.overdue? ? 'text-red-400' : 'text-gray-400' %> mb-4">
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <% if @task.overdue? %>
                <span class="">Overdue: <%= @task.due_date.strftime("%B %d, %Y") %></span>
              <% else %>
                Due: <%= @task.due_date.strftime("%B %d, %Y") %>
              <% end %>
            </div>
          <% end %>

          <% if @task.completed_at %>
            <div class="flex items-center text-sm text-green-400 mb-4">
              <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Completed <%= time_ago_in_words(@task.completed_at) %> ago
            </div>
          <% end %>
        </div>

        <div class="ml-4">
          <%= link_to edit_project_task_path(@project, @task), class: "inline-flex items-center px-3 py-2 border border-gray-700 shadow-sm text-sm leading-4   text-gray-400 bg-[#252525] hover:bg-[#1a1a1a]" do %>
            <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
          <% end %>
        </div>
      </div>

      <% if @task.description.present? %>
        <div class="border-t border-gray-700 pt-6">
          <h2 class="text-lg  text-gray-100 mb-3">Description</h2>
          <div class="prose prose-sm max-w-none text-gray-400">
            <%= simple_format(@task.description) %>
          </div>
        </div>
      <% end %>

      <div class="border-t border-gray-700 pt-6 mt-6">
        <h2 class="text-lg  text-gray-100 mb-3">Details</h2>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm  text-gray-400">Project</dt>
            <dd class="mt-1 text-sm text-gray-100">
              <%= link_to @project.name, @project, class: "text-gray-400 hover:text-indigo-500" %>
            </dd>
          </div>
          
          <div>
            <dt class="text-sm  text-gray-400">Created</dt>
            <dd class="mt-1 text-sm text-gray-100">
              <%= @task.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </dd>
          </div>
          
          <div>
            <dt class="text-sm  text-gray-400">Last Updated</dt>
            <dd class="mt-1 text-sm text-gray-100">
              <%= @task.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>
