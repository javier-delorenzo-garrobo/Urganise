<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl  text-gray-100">ğŸ“… My Calendar</h1>
      <p class="mt-2 text-sm text-gray-400">Manage your events, meetings, and deadlines</p>
    </div>
    <%= link_to new_calendar_event_path, class: "inline-flex items-center px-4 py-2 border border-transparent  shadow-sm text-sm  text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      New Event
    <% end %>
  </div>

  <% if current_user.calendar_events.empty? %>
    <!-- Empty State -->
    <div class="text-center py-12 bg-[#252525] rounded-lg  shadow">
      <svg class="mx-auto h-12 w-12 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <h3 class="mt-2 text-sm  text-gray-100">No events</h3>
      <p class="mt-1 text-sm text-gray-400">Get started by creating your first calendar event.</p>
      <div class="mt-6">
        <%= link_to new_calendar_event_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm   text-white bg-blue-600 rounded-lg hover:bg-blue-700" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New Event
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Upcoming Events -->
    <div class="bg-[#252525] rounded-lg shadow  overflow-hidden mb-8">
      <div class="px-6 py-4 border-b border-gray-700">
        <h2 class="text-lg  text-gray-100">Upcoming Events</h2>
      </div>
      <ul class="divide-y divide-gray-200">
        <% current_user.calendar_events.upcoming.limit(10).each do |event| %>
          <li class="px-6 py-4 hover:bg-[#1a1a1a]">
            <div class="flex items-center justify-between">
              <div class="flex items-center flex-1">
                <div class="flex-shrink-0 h-10 w-10  flex items-center justify-center" style="background-color: <%= event.color %>">
                  <% case event.event_type
                     when 'meeting' %>
                    <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                  <% when 'deadline' %>
                    <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  <% when 'task' %>
                    <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                    </svg>
                  <% else %>
                    <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  <% end %>
                </div>
                <div class="ml-4 flex-1">
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="text-sm  text-gray-100">
                        <%= link_to event.title, calendar_event_path(event), class: "hover:text-gray-400" %>
                      </p>
                      <p class="text-sm text-gray-400">
                        <%= event.start_time.strftime("%B %d, %Y at %I:%M %p") %>
                        <% if event.location.present? %>
                          â€¢ <%= event.location %>
                        <% end %>
                      </p>
                      <% if event.project %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs  bg-[#252525] rounded-lg text-gray-300 mt-1">
                          <%= event.project.name %>
                        </span>
                      <% end %>
                    </div>
                    <div class="flex space-x-2">
                      <%= link_to edit_calendar_event_path(event), class: "text-gray-500 hover:text-gray-400" do %>
                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                      <%= button_to calendar_event_path(event), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-gray-500 hover:text-red-400" do %>
                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
