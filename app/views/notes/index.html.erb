<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl  text-gray-100">üìù My Notes</h1>
      <p class="mt-2 text-sm text-gray-400">Keep track of your ideas and important information</p>
    </div>
    <%= link_to new_note_path, class: "inline-flex items-center px-4 py-2 border border-transparent  shadow-sm text-sm  text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      New Note
    <% end %>
  </div>

  <% if @notes.empty? %>
    <!-- Empty State -->
    <div class="text-center py-12 bg-[#252525] rounded-lg  shadow">
      <svg class="mx-auto h-12 w-12 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-2 text-sm  text-gray-100">No notes</h3>
      <p class="mt-1 text-sm text-gray-400">Get started by creating a new note.</p>
      <div class="mt-6">
        <%= link_to new_note_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm   text-white bg-blue-600 rounded-lg hover:bg-blue-700" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New Note
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Notes Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @notes.each do |note| %>
        <% color_class = case note.color
                         when 'yellow' then 'bg-yellow-50 border-yellow-400'
                         when 'blue' then 'bg-blue-50 border-blue-400'
                         when 'green' then 'bg-green-900/20 border-green-400'
                         when 'pink' then 'bg-pink-50 border-pink-400'
                         when 'purple' then 'bg-purple-50 border-purple-400'
                         when 'orange' then 'bg-orange-50 border-orange-400'
                         else 'bg-[#1a1a1a] border-gray-600'
                         end %>
        <div class="<%= color_class %> border-l-4  shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden">
          <div class="p-6">
            <div class="flex justify-between items-start mb-3">
              <h3 class="text-lg  text-gray-100 flex-1">
                <%= link_to note.title, note_path(note), class: "hover:text-gray-400" %>
              </h3>
              <div class="flex space-x-2">
                <%= link_to edit_note_path(note), class: "text-gray-500 hover:text-gray-400" do %>
                  <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                <% end %>
                <%= button_to note_path(note), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-gray-500 hover:text-red-400" do %>
                  <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                <% end %>
              </div>
            </div>
            
            <% if note.project %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs  bg-[#252525] rounded-lg text-gray-300 mb-3">
                <%= note.project.name %>
              </span>
            <% end %>
            
            <div class="text-sm text-gray-400 line-clamp-3">
              <%= simple_format(truncate(note.content, length: 150)) %>
            </div>
            
            <% if note.tags.present? %>
              <div class="mt-3 flex flex-wrap gap-2">
                <% note.tags.each do |tag| %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs  bg-indigo-100 text-indigo-800">
                    #<%= tag %>
                  </span>
                <% end %>
              </div>
            <% end %>
            
            <% if note.files.attached? %>
              <div class="mt-3 flex items-center text-xs text-gray-400">
                <svg class="h-4 w-4 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
                </svg>
                <%= note.files.count %> attachment<%= 's' if note.files.count != 1 %>
              </div>
            <% end %>
            
            <div class="mt-4 text-xs text-gray-400">
              <%= time_ago_in_words(note.created_at) %> ago
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
