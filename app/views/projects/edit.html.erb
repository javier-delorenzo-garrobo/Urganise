<% content_for :title, "Edit Project - Urganise" %>

<div class="max-w-2xl mx-auto px-4 sm:px-0">
  <div class="mb-8">
    <%= link_to @project, class: "text-sm  text-gray-400 hover:text-indigo-500" do %>
      ‚Üê Back to Project
    <% end %>
  </div>

  <div class="bg-[#252525] rounded-lg shadow ">
    <div class="px-4 py-5 sm:p-6">
      <h1 class="text-2xl  text-gray-100 mb-6">Edit Project</h1>

      <%= form_with(model: @project, class: "space-y-6") do |f| %>
        <% if @project.errors.any? %>
          <div class=" bg-red-900/20 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm  text-red-200">
                  <%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @project.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :name, "Project Name", class: "block text-sm  text-gray-400 mb-1" %>
          <%= f.text_field :name, class: "block w-full  border-gray-700 shadow-sm focus:border-gray-600 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :description, class: "block text-sm  text-gray-400 mb-1" %>
          <%= f.text_area :description, rows: 4, class: "block w-full  border-gray-700 shadow-sm focus:border-gray-600 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div class="flex justify-end space-x-3 pt-4">
          <%= link_to "Cancel", @project, class: "px-4 py-2 border border-gray-700  shadow-sm text-sm  text-gray-400 bg-[#252525] hover:bg-[#1a1a1a] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= f.submit "Update Project", class: "px-4 py-2 border border-transparent  shadow-sm text-sm  text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
