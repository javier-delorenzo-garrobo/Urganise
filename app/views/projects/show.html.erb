<% content_for :title, "#{@project.name} - Urganise" %>

<div class="px-4 sm:px-0">
  <div class="mb-8">
    <%= link_to projects_path, class: "text-sm  text-gray-400 hover:text-indigo-500" do %>
      ‚Üê Back to Projects
    <% end %>
  </div>

  <!-- Project Header -->
  <div class="bg-[#252525] rounded-lg shadow  mb-6">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <h1 class="text-3xl  text-gray-100 mb-2"><%= @project.name %></h1>
          <% if @project.description.present? %>
            <p class="text-gray-400 mt-2"><%= @project.description %></p>
          <% end %>
        </div>
        <div class="ml-4 flex space-x-3">
          <%= link_to edit_project_path(@project), class: "inline-flex items-center px-3 py-2 border border-gray-700 shadow-sm text-sm leading-4   text-gray-400 bg-[#252525] hover:bg-[#1a1a1a] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
          <% end %>
          <%= link_to project_categories_path(@project), class: "inline-flex items-center px-3 py-2 border border-gray-700 shadow-sm text-sm leading-4   text-gray-400 bg-[#252525] hover:bg-[#1a1a1a] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
            Categories
          <% end %>
          <%= link_to new_project_task_path(@project), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm   text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Task
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Tasks List -->
  <div class="bg-[#252525] rounded-lg shadow ">
    <div class="px-4 py-5 sm:p-6">
      <h2 class="text-lg  text-gray-100 mb-4">Tasks</h2>
      
      <% if @tasks.any? %>
        <div class="space-y-3">
          <% @tasks.group_by(&:status).each do |status, tasks| %>
            <div>
              <h3 class="text-sm  text-gray-400 mb-2 flex items-center">
                <% if status == "completed" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs  bg-emerald-900/30 text-green-200">
                    <%= status.humanize %> (<%= tasks.count %>)
                  </span>
                <% elsif status == "in_progress" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs  bg-blue-100 text-blue-800">
                    <%= status.humanize %> (<%= tasks.count %>)
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs  bg-[#252525] rounded-lg text-gray-300">
                    <%= status.humanize %> (<%= tasks.count %>)
                  </span>
                <% end %>
              </h3>
              
              <ul class="divide-y divide-gray-200 border border-gray-700 ">
                <% tasks.each do |task| %>
                  <li class="px-4 py-3 hover:bg-[#1a1a1a]">
                    <div class="flex items-center justify-between">
                      <div class="flex-1 min-w-0">
                        <%= link_to project_task_path(@project, task), class: "block" do %>
                          <div class="flex items-center">
                            <% if task.completed? %>
                              <svg class="h-5 w-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                              </svg>
                            <% else %>
                              <svg class="h-5 w-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                              </svg>
                            <% end %>
                            
                            <div>
                              <p class="text-sm  text-gray-100 <%= 'line-through text-gray-400' if task.completed? %>">
                                <%= task.title %>
                              </p>
                              <div class="flex items-center space-x-2 mt-1">
                                <% if task.category %>
                                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs " style="background-color: <%= task.category.color %>20; color: <%= task.category.color %>;">
                                    <%= task.category.name %>
                                  </span>
                                <% end %>
                                
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs  <%= task.priority == 'urgent' ? 'bg-rose-900/30 text-red-200' : task.priority == 'high' ? 'bg-orange-100 text-orange-800' : task.priority == 'medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-[#252525] rounded-lg text-gray-300' %>">
                                  <%= task.priority.humanize %>
                                </span>
                                
                                <% if task.due_date %>
                                  <span class="text-xs text-gray-400">
                                    <% if task.overdue? %>
                                      <span class="text-red-400 ">Overdue: <%= task.due_date.strftime("%b %d") %></span>
                                    <% else %>
                                      Due: <%= task.due_date.strftime("%b %d, %Y") %>
                                    <% end %>
                                  </span>
                                <% end %>
                              </div>
                            </div>
                          </div>
                        <% end %>
                      </div>
                      
                      <div class="ml-4 flex items-center space-x-2">
                        <% unless task.completed? %>
                          <%= button_to complete_project_task_path(@project, task), method: :patch, class: "text-sm text-green-400 hover:text-green-700 " do %>
                            Complete
                          <% end %>
                        <% else %>
                          <%= button_to uncomplete_project_task_path(@project, task), method: :patch, class: "text-sm text-gray-400 hover:text-gray-400 " do %>
                            Reopen
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
          <h3 class="mt-2 text-sm  text-gray-100">No tasks</h3>
          <p class="mt-1 text-sm text-gray-400">Get started by creating a new task.</p>
          <div class="mt-6">
            <%= link_to new_project_task_path(@project), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm   text-white bg-blue-600 rounded-lg hover:bg-blue-700" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              New Task
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
